<Window x:Class="WpfTrain1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Demo First WPF" Height="500" Width="820"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="WatermarkTextBox" TargetType="{x:Type TextBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                            <TextBlock Text="{TemplateBinding Tag}"
                                       Margin="6,0,0,0"
                                       VerticalAlignment="Center"
                                       Foreground="Gray"
                                       IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDE -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <!-- pagination -->
            </Grid.RowDefinitions>

            <!-- SEARCH -->
            <StackPanel Orientation="Horizontal" Margin="0 0 0 8" Grid.Row="0">
                <TextBox x:Name="TbSearch"
                         Width="300"
                         Height="28"
                         Style="{StaticResource WatermarkTextBox}"
                         Tag="Tìm kiếm theo Name hoặc Category..."
                         VerticalContentAlignment="Center"/>
                <Button Content="Search" Width="80" Margin="8 0 0 0" Click="BtnSearch_Click"/>
                <Button Content="Clear" Width="80" Margin="8 0 0 0" Click="BtnClearSearch_Click"/>
            </StackPanel>

            <!-- DATAGRID -->
            <DataGrid x:Name="DataGridItems"
                      Grid.Row="1"
                      AutoGenerateColumns="False"
                      SelectionMode="Single"
                      IsReadOnly="True"
                      Margin="0,0,8,0"
                      ItemsSource="{Binding PagedItems}"
                      SelectionChanged="DataGridItems_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=N0}" Width="120"/>
                    <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="140"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- PAGINATION -->
            <StackPanel Orientation="Horizontal"
                        Grid.Row="2"
                        HorizontalAlignment="Center"
                        Margin="0 10 0 0">
                <Button Content="Prev" Width="80" Margin="8" Click="BtnPrev_Click"/>
                <TextBlock x:Name="TxtPageInfo" VerticalAlignment="Center" FontSize="14" Margin="10"/>
                <Button Content="Next" Width="80" Margin="8" Click="BtnNext_Click"/>
            </StackPanel>
        </Grid>

        <!-- RIGHT SIDE -->
        <Grid Grid.Column="1" Margin="20,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <!-- Category -->
            <TextBlock Text="Category:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
            <ComboBox x:Name="CbCategory" Grid.Row="0" Grid.Column="1" Height="28" Margin="0 4 0 8">
                <ComboBoxItem>Food</ComboBoxItem>
                <ComboBoxItem>Drink</ComboBoxItem>
                <ComboBoxItem>Electronics</ComboBoxItem>
                <ComboBoxItem>Other</ComboBoxItem>
            </ComboBox>

            <!-- ID -->
            <TextBlock Text="ID:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="TbId" Grid.Row="1" Grid.Column="1" Height="28" Margin="0 4 0 8"/>

            <!-- Name -->
            <TextBlock Text="Name:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="TbName" Grid.Row="2" Grid.Column="1" Height="28" Margin="0 4 0 8"/>

            <!-- Price -->
            <TextBlock Text="Price:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="TbPrice" Grid.Row="3" Grid.Column="1" Height="28" Margin="0 4 0 12"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0 10 0 0">
                <Button Content="Add" Width="60" Margin="0 0 8 0" Click="BtnAdd_Click"/>
                <Button Content="Edit" Width="60" Margin="0 0 8 0" Click="BtnEdit_Click"/>
                <Button Content="Delete" Width="60" Margin="0 0 8 0" Click="BtnDelete_Click"/>
                <Button Content="Clear" Width="60" Click="BtnClearForm_Click"/>
            </StackPanel>

            <!-- Status -->
            <TextBlock x:Name="TxtStatus"
                       Grid.Row="5" Grid.ColumnSpan="2"
                       Margin="0 12 0 0"
                       Foreground="Gray"
                       TextWrapping="Wrap"/>
        </Grid>

    </Grid>
</Window>
