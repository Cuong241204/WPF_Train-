<Window x:Class="WpfTrain1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Demo First WPF"
        Height="500"
        Width="820"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>

        <!-- WATERMARK TEXTBOX -->
        <Style x:Key="WatermarkTextBox" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost"/>
                                <TextBlock Text="{TemplateBinding Tag}"
                                           Margin="6,0,0,0"
                                           VerticalAlignment="Center"
                                           Foreground="Gray"
                                           IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value=""/>
                                                        <Condition Binding="{Binding IsFocused, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="False"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- BASIC TEXTBOX -->
        <Style x:Key="RequiredTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="0,4,0,8"/>
        </Style>

        <!-- BASIC COMBOBOX -->
        <Style x:Key="RequiredComboBoxStyle" TargetType="ComboBox">
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="0,4,0,8"/>
        </Style>

        <!-- VALIDATION STYLES -->
        <Style x:Key="ValidatedTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource RequiredTextBoxStyle}">
            <Style.Triggers>
                <Trigger Property="Text" Value="">
                    <Setter Property="BorderBrush" Value="Red"/>
                    <Setter Property="ToolTip" Value="Trường này không được để trống"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ValidatedComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource RequiredComboBoxStyle}">
            <Style.Triggers>
                <Trigger Property="SelectedIndex" Value="-1">
                    <Setter Property="BorderBrush" Value="Red"/>
                    <Setter Property="ToolTip" Value="Bạn phải chọn giá trị"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- SEARCH -->
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBox Width="300"
                         Style="{StaticResource WatermarkTextBox}"
                         Tag="Tìm kiếm theo Name hoặc Category..."/>
                <Button Content="Search" Width="80" Margin="8 0 0 0"/>
            </StackPanel>

            <!-- DATAGRID -->
            <DataGrid x:Name="ProductGrid"
                      Grid.Row="1"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Margin="0,0,8,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Width="60" Binding="{Binding Id}"/>
                    <DataGridTextColumn Header="Name" Width="*" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Price" Width="120" Binding="{Binding Price}"/>
                    <DataGridTextColumn Header="Category" Width="140" Binding="{Binding Category}"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- PAGINATION -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0 10 0 0">
                <Button Content="Prev" Width="80" Margin="10" Click="Prev_Click"/>
                <TextBlock x:Name="TxtPage"
                           Text="1 / 1"
                           FontSize="14"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
                <Button Content="Next" Width="80" Margin="10" Click="Next_Click"/>
            </StackPanel>
        </Grid>

        <!-- RIGHT -->
        <Grid Grid.Column="1" Margin="20,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Category:" VerticalAlignment="Center"/>
            <ComboBox x:Name="CbCategory"
                      Grid.Column="1"
                      SelectedIndex="-1"
                      Style="{StaticResource ValidatedComboBoxStyle}">
                <ComboBoxItem>Food</ComboBoxItem>
                <ComboBoxItem>Drink</ComboBoxItem>
                <ComboBoxItem>Electronics</ComboBoxItem>
                <ComboBoxItem>Other</ComboBoxItem>
            </ComboBox>

            <TextBlock Text="ID:" Grid.Row="1" VerticalAlignment="Center"/>
            <TextBox x:Name="TbId"
                     Grid.Row="1"
                     Grid.Column="1"
                     Style="{StaticResource ValidatedTextBoxStyle}"/>

            <TextBlock Text="Name:" Grid.Row="2" VerticalAlignment="Center"/>
            <TextBox x:Name="TbName"
                     Grid.Row="2"
                     Grid.Column="1"
                     Style="{StaticResource ValidatedTextBoxStyle}"/>

            <TextBlock Text="Price:" Grid.Row="3" VerticalAlignment="Center"/>
            <TextBox x:Name="TbPrice"
                     Grid.Row="3"
                     Grid.Column="1"
                     Style="{StaticResource ValidatedTextBoxStyle}"/>

            <StackPanel Grid.Row="4"
                        Grid.ColumnSpan="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0 10 0 0">
                <Button Content="Add" Width="70" Margin="0 0 15 0" Click="Add_Click"/>
                <Button Content="Edit" Width="70" Margin="0 0 15 0" Click="Edit_Click"/>
                <Button Content="Delete" Width="70" Click="Delete_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
